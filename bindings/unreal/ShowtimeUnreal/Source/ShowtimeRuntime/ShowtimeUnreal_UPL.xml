<?xml version="1.0" encoding="utf-8"?>
<!--Elias additions-->
<root xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- init section is always evaluated once per architecture -->
	<init>
		<!-- currently only support armv8 -->
		<setBool result="bSupported" value="false"/>
		<isArch arch="arm64-v8a">
			<setBool result="bSupported" value="true"/>
		</isArch>
		
		<if condition="bSupported">
			<false>
				<log text="WARNING: this architecture is not supported for libshowtime.so!"/>
			</false>
		</if>
	</init>

	<!-- optional files or directories to copy to Intermediate/Android/APK -->
	<resourceCopies>
		<isArch arch="arm64-v8a">
			<copyFile src="$S(PluginDir)/../../external/lib/Android/libShowtimeClient.so"
				dst="$S(BuildDir)/libs/arm64-v8a/libShowtimeClient.so" />
			<copyFile src="$S(PluginDir)/../../external/lib/Android/libShowtimeServer.so"
				dst="$S(BuildDir)/libs/arm64-v8a/libShowtimeServer.so" />
			<copyFile src="$S(PluginDir)/../../external/lib/Android/libShowtimeCore.so"
				dst="$S(BuildDir)/libs/arm64-v8a/libShowtimeCore.so" />
			<copyFile src="$S(PluginDir)/../../external/lib/Android/libczmq.so"
				dst="$S(BuildDir)/libs/arm64-v8a/libczmq.so" />
			<copyFile src="$S(PluginDir)/../../external/lib/Android/libzmq.so"
				dst="$S(BuildDir)/libs/arm64-v8a/libzmq.so" />
		</isArch>
	</resourceCopies>
</root>