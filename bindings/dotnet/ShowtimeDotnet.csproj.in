<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>${PROJECT_NAME}</PackageId>
    <Title>${CMAKE_PROJECT_NAME}</Title>
    <Authors>${AUTHORS}</Authors>
    <Company>${COMPANY}</Company>
    <PackageDescription>${DESCRIPTION}</PackageDescription>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <Tags>${TAGS}</Tags>
    <RepositoryUrl>${REPO_URL}</RepositoryUrl>
    <TargetFramework>${BINDINGS_DOTNET_FRAMEWORK_VERSION}</TargetFramework>
    <RuntimeIdentifiers>${ALL_RIDS}</RuntimeIdentifiers>
    <Version>${CMAKE_PROJECT_VERSION}</Version>
    <AssemblyVersion>${CMAKE_PROJECT_VERSION}</AssemblyVersion>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <OutputPath>${DOTNET_OUTPUT_FOLDER}</OutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
  <ItemGroup>
    ${DOTNET_SRC_BLOCK}
  </ItemGroup>
  <ItemGroup>
    <None Include="${LICENSE_FILE}" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>
  <ItemGroup>
    ${DOTNET_NATIVE_RUNTIMES_BLOCK}
  </ItemGroup>
</Project>
